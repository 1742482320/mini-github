.themebox{
    width: 684rpx;
    margin: 40rpx auto 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    border: 4rpx solid #fff;
}

.themebox .item{
    width: 220rpx;
    flex-grow: 1;
    height: 220rpx;
    border: 4rpx solid #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 28rpx;
    font-weight: 700;
}