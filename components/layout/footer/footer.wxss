.footer {
    width: 750rpx;
    height: 50px;
    border-top: 1px solid #eee;
    background: #fff;
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 99;
}

.footer .item {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.footer .item .icon {
    height: 34rpx;
    width: 34rpx;
}

.footer .item .name {
    font-size: 22rpx;
}